{
  "name": "icd-group-backend",
  "version": "1.0.0",
  "description": "Backend API for ICD Group website with reCAPTCHA v2 verification",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run only-build && npm run watch",
    "only-build": "npm run build-ts",
    "build-ts": "tsc --skipLibCheck",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "serve": "cd ./dist && nodemon server.js"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "recaptcha"
  ],
  "author": "ICD Group",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "nodemailer": "^7.0.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^7.0.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
